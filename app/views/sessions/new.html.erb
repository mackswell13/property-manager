<%# Flash messages %>
<%= tag.div(flash[:alert], class: "bg-red-100 text-red-700 p-3 rounded mb-4") if flash[:alert] %>
<%= tag.div(flash[:notice], class: "bg-green-100 text-green-700 p-3 rounded mb-4") if flash[:notice] %>

<%= form_with url: session_path, class: "space-y-4 max-w-md mx-auto" do |form| %>
  <div>
    <%= form.email_field :email_address,
      required: true,
      autofocus: true,
      autocomplete: "username",
      placeholder: "Enter your email address",
      value: params[:email_address],
      class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
    %>
  </div>

  <div>
    <%= form.password_field :password,
      required: true,
      autocomplete: "current-password",
      placeholder: "Enter your password",
      maxlength: 72,
      class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
    %>
  </div>

  <div>
    <%= form.submit "Sign in",
      class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded"
    %>
  </div>
<% end %>

<div class="mt-4 text-center">
  <%= link_to "Forgot password?", new_password_path, class: "text-blue-600 hover:underline" %>
</div>

